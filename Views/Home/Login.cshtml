@{
    if (ViewData["login"] != null)
    {
        <p>Already logged in as @ViewData["login"]</p>
    } else {
        <form asp-action="Login" asp-controller="Home">
            Username:
            <input type="text" name="name">
            Password:
            <input type="password" name="password">
            <input type="submit" value="Login">
        </form>
    }
}

<a asp-controller="Home" asp-action="CreateLogin">Create new login</a>
